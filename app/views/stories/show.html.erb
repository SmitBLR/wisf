<% content_for :head do %>
  <script type="text/javascript" src="http://userapi.com/js/api/openapi.js?22"></script>
  <script type="text/javascript">
    VK.init({apiId: 2237171, onlyWidgets: true});
  </script>
  <script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
<% end %>
<% content_for :content do %>
  <%= render :partial => 'story', :collection => [ @story ] %>
    <div id="pagination">
		<table width="100%">
			<tr>
				<td>
					<h2 id="paragraph" style="text-align: left;">
						<%= link_to "← предыдущая", { :action => 'show', :id => @prev } %>
					</h2>
				</td>
				<td>
					<h2 id="paragraph">
						<%= link_to "назад", { :action => 'index', :page => session[:page]} %>
					</h2>
				</td>
				<td>
					<h2 id="paragraph" style="text-align: right;">
						<%= link_to "следующая →", { :action => 'show', :id => @next } %>
					</h2>
				</td>
			</tr>
		</table>
    </div>
	
  <div id="commentsblock">
    <div id="comments">
        <%= render :partial => "comments/show", :collection => @story.comments %>
    </div>
    <div id="commentnotice">
    </div>
    <div>
        <%= render :partial => "comments/form" %>
    </div>
    <div id="vk_comments"></div>
	<script type="text/javascript">
		VK.Widgets.Comments("vk_comments", {limit: 10, width: "640", attach: "*"});
	</script>
  </div>
<% end %>